@model List<KitaplikProje.Models.Category>
@{
    ViewData["Title"] = "Index3";
    Layout = "~/Views/Shared/__Layout.cshtml";
}

<h1>Kategori Listesi</h1>
<br />
@using (Html.BeginForm())
{
    <p>
        Kategori Adı:@Html.TextBox("p")
        <input type="submit" value="Find"/>
    </p>
}
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Kategori Adı</th>
        <th>Delete</th>
        <th>Update</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.CategoryID</td>
            <td>@item.CategoryName</td>
            <td><a href="/Category/CategoryDelete/@item.CategoryID" class="btn btn-danger text-light">Delete</a></td>
            <td><a href="/Category/CategoryGet/@item.CategoryID" class="btn btn-success text-light">Update</a></td>          
        </tr>
    }
</table>
<a href="/Category/CategoryAdd/" class="btn btn-primary">Yeni Kategori</a>

